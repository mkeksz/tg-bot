{
  "name": "tg-bot",
  "version": "1.0.0",
  "description": "Template for Telegram Bots",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "start": "ts-node --transpile-only .",
    "start-dev": "NODE_ENV=development nodemon -e js,json,ftl,ts",
    "test": "NODE_ENV=test jest --runInBand --silent",
    "lint": "eslint .",
    "lint-fix": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com//mkeksz/tg-bot.git"
  },
  "keywords": [
    "telegram",
    "bot"
  ],
  "author": "Vladislav Mozharov <mozharovlad@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": "18.*",
    "npm": "8.*"
  },
  "jest": {
    "testMatch": [
      "**/*.tests.js",
      "**/tests.js"
    ],
    "testPathIgnorePatterns": [
      "config"
    ]
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.1",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-plugin-security": "^1.5.0",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20"
  },
  "dependencies": {
    "@grammyjs/conversations": "^1.0.3",
    "@grammyjs/i18n": "^1.0.1",
    "@grammyjs/menu": "^1.1.2",
    "@grammyjs/parse-mode": "^1.5.0",
    "@grammyjs/storage-mongodb": "^2.0.0",
    "config": "^3.3.8",
    "express": "^4.18.2",
    "grammy": "^1.11.2",
    "log4js": "^6.7.0",
    "mongoose": "^6.7.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0"
  }
}
